{{!
    @template filter_synhi/setting_highlight_example

    Admin setting description template.

    Context variables required for this template:
    * labelfor - id of the form element
    * title - Setting title
    * name - Setting name

    Example context (json):
    {
        "code": "<pre>echo 'Code to highlight';</pre>",
        "highlightdata": [
            "thejs": "Moodle url",
            "thecss": "Moodle url",
            "theinit": "Init JS"
        ]
    }
}}
{{!
    Setting highlight example.
}}

<iframe id="setting_highlight_example_frame" style="border:0; width:100%;" srcdoc="
    <html>
        <head>
            <title>Example</title>
            {{#highlightdata}}
                {{#thecss}}
                    <link rel='stylesheet' type='text/css' href='{{{thecss}}}'>
                {{/thecss}}
            {{/highlightdata}}
        </head>
        <body>
            {{{code}}}
        </body>
        {{#highlightdata}}
            {{#thejs}}
                <script type='text/javascript' charset='utf-8' src='{{{thejs}}}'></script>
            {{/thejs}}
            {{#theinit}}
                <script type='text/javascript' charset='utf-8'>{{{theinit}}}</script>
            {{/theinit}}
        {{/highlightdata}}
    </html>
"></iframe>
